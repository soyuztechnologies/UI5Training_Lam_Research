<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
controllerName="tcs.fin.payroll.controller.View1">
    <Page title="View 1">
            <headerContent>
                <Button icon="sap-icon://action" press="onNext"></Button>
            </headerContent>
        <content>
            <List id="idList">
                <items>
                    <!--Data left and right side-->
                    <DisplayListItem label="Apple" value="Most powerful antibiotic on planet" />
                    <!--Data up and down along with icon-->
                    <StandardListItem title="Banana" description="Biggest source of potassium" 
                    icon="https://img1.mashed.com/img/gallery/heres-what-happens-when-you-eat-a-banana-every-day/intro-1596497583.jpg"></StandardListItem>
                    <!--used to display Business Object-->
                    <ObjectListItem title="Mango" intro="Purifies blood" icon="https://pngimg.com/uploads/mango/mango_PNG9165.png"
                                    number="580 INR" numberUnit="per Kg."></ObjectListItem>
                    <!--Suitable for add Input fields inside the app list-->
                    <InputListItem>
                        <content>
                            <HBox>
                                <Text class="sapUiSmallMarginTop" text="Which is the best fruit for skin" />
                                <Input />
                            </HBox>
                        </content>
                    </InputListItem>
                    <!--Social media app where we want chats or some conversation logs-->
                    <FeedListItem
                        sender="Aunbhav"
                        info="Response"
                        text="This is an Exmaple of Feed List">
                    </FeedListItem>
                    <!--if none of list item serves the purpose, we can go for custom-->
                    <CustomListItem >
                        <content>
                            <SegmentedButton >
                                <items>
                                    <SegmentedButtonItem text="Low" />
                                    <SegmentedButtonItem text="Medium" />
                                    <SegmentedButtonItem text="High" />
                                </items>
                            </SegmentedButton>
                        </content>
                    </CustomListItem>
                    <!--clickable action show user can trigger code-->
                    <ActionListItem text="Order Now!!" press="onNext">
                    </ActionListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
